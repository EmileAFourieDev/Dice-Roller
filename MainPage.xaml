<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dice_Roller.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">

            <!-- Dice row -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                <Image x:Name="dice1image" WidthRequest="100" HeightRequest="100"/>
                <Image x:Name="dice2image" WidthRequest="100" HeightRequest="100"/>
            </HorizontalStackLayout>

            <!-- Result -->
            <Label x:Name="ResultLabel"
           Text="🎲 Tap Roll!"
           FontSize="28"
           HorizontalOptions="Center" />

            <!-- Roll Button -->
            <Button Text="Roll Dice"
            Clicked="OnRollDiceClicked"
            FontSize="20" />

            <!-- History -->
            <Label Text="History:" FontAttributes="Bold" />
            <CollectionView x:Name="HistoryList" HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" FontSize="18"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>


    </ScrollView>

</ContentPage>
